:root {
    --deep-sea: #050a0e;
    --teal-glow: #035C6B;
    --bronze: #c5a059;
    --mist: rgba(3, 92, 107, 0.15);
    --text-white: #e0e0e0;
    --text-gray: #aaa;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    margin: 0;
    background-color: var(--deep-sea);
    color: var(--text-white);
    font-family: 'Montserrat', sans-serif;
    overflow-x: hidden;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
}

/* SCROLL PROGRESS */
.scroll-progress {
    position: fixed;
    top: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--teal-glow), var(--bronze));
    z-index: 1001;
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.1s ease;
}

/* NAVBAR */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(5, 10, 14, 0.7);
    backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
}

.navbar.scrolled {
    background: rgba(5, 10, 14, 0.95);
}

.nav-border {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg,
            transparent 0%,
            var(--teal-glow) 20%,
            var(--bronze) 50%,
            var(--teal-glow) 80%,
            transparent 100%);
    box-shadow: 0 0 10px var(--teal-glow);
}

.nav-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 20px 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.brand {
    display: flex;
    align-items: center;
    gap: 15px;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.brand:hover {
    transform: translateX(5px);
}

.brand-logo {
    height: 55px;
    filter: drop-shadow(0 0 5px rgba(3, 92, 107, 0.5));
}

.brand-text {
    display: flex;
    flex-direction: column;
}

.brand-title {
    font-family: 'Teko', sans-serif;
    font-weight: 700;
    font-size: 24px;
    color: var(--text-white);
    line-height: 1;
    letter-spacing: 1px;
}

.brand-subtitle {
    font-size: 10px;
    color: var(--bronze);
    letter-spacing: 3px;
    text-transform: uppercase;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 40px;
}

.nav-link {
    position: relative;
    text-decoration: none;
    color: var(--text-gray);
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: 0.3s;
    padding: 10px 0;
}

.nav-link::before,
.nav-link::after {
    content: '[';
    position: absolute;
    left: -15px;
    opacity: 0;
    color: var(--teal-glow);
    transition: 0.3s ease;
}

.nav-link::after {
    content: ']';
    left: auto;
    right: -15px;
}

.nav-link:hover,
.nav-link.active {
    color: var(--text-white);
    text-shadow: 0 0 8px var(--teal-glow);
}

.nav-link:hover::before,
.nav-link.active::before {
    opacity: 1;
    left: -10px;
}

.nav-link:hover::after,
.nav-link.active::after {
    opacity: 1;
    right: -10px;
}

.btn-cta {
    padding: 12px 30px;
    background: var(--teal-glow);
    color: white;
    text-decoration: none;
    font-family: 'Teko', sans-serif;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 1px;
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
    transition: 0.3s;
    position: relative;
    overflow: hidden;
}

.btn-cta:hover {
    background: white;
    color: var(--deep-sea);
    box-shadow: 0 0 15px var(--teal-glow);
}

.btn-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: 0.5s;
}

.btn-cta:hover::before {
    left: 100%;
}

/* MOBILE */
.mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
}

.mobile-toggle span {
    width: 30px;
    height: 3px;
    background: var(--teal-glow);
    transition: 0.3s;
}

.mobile-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(8px, 8px);
}

.mobile-toggle.active span:nth-child(2) {
    opacity: 0;
}

.mobile-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(8px, -8px);
}

.mobile-menu {
    position: fixed;
    top: 89px;
    right: 0;
    width: 100%;
    max-width: 400px;
    height: calc(100vh - 89px);
    background: rgba(5, 10, 14, 0.98);
    backdrop-filter: blur(20px);
    transform: translateX(100%);
    transition: transform 0.4s ease;
    z-index: 999;
    overflow-y: auto;
    padding: 40px 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.mobile-menu.active {
    transform: translateX(0);
}

.mobile-menu a {
    padding: 15px;
    color: var(--text-white);
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: 0.3s;
}

.mobile-menu a:hover {
    color: var(--teal-glow);
    padding-left: 25px;
}

.mobile-cta {
    background: var(--teal-glow);
    text-align: center;
    border: none !important;
    margin-top: 20px;
}

/* HERO */
.hero {
    height: 100vh;
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('hero-dark.jpg');
    background-size: cover;
    background-position: center;
    z-index: 1;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: radial-gradient(circle, transparent 0%, var(--deep-sea) 90%),
        linear-gradient(to top, var(--deep-sea) 10%, transparent 50%);
    box-shadow: inset 0 0 100px var(--deep-sea);
}

.hero-content {
    position: relative;
    z-index: 3;
    max-width: 900px;
    padding: 20px;
}

.hero-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
    color: var(--bronze);
    font-family: 'Cinzel', serif;
    font-size: 14px;
    letter-spacing: 3px;
}

.rune-line {
    height: 1px;
    width: 50px;
    background: linear-gradient(90deg, transparent, var(--bronze), transparent);
}

.hero-title {
    font-family: 'Cinzel', serif;
    font-size: clamp(3rem, 6vw, 6rem);
    line-height: 1.1;
    letter-spacing: 5px;
    margin: 0 0 30px 0;
    color: var(--text-white);
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.8);
}

.gold-text {
    color: var(--bronze);
    background: linear-gradient(to bottom, #f0d58e, #9e7f3c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 5px rgba(197, 160, 89, 0.3));
}

.hero-subtitle {
    font-size: 16px;
    line-height: 1.6;
    letter-spacing: 2px;
    color: var(--text-gray);
    max-width: 600px;
    margin: 0 auto 50px auto;
    border-left: 1px solid var(--teal-glow);
    padding-left: 20px;
    text-align: left;
}

.hero-stats {
    display: flex;
    justify-content: center;
    gap: 60px;
    margin: 50px 0;
}

.stat-item {
    text-align: center;
}

.stat-number {
    font-family: 'Teko', sans-serif;
    font-size: 48px;
    font-weight: 700;
    color: var(--teal-glow);
    line-height: 1;
    margin-bottom: 10px;
}

.stat-label {
    font-size: 11px;
    color: var(--text-gray);
    letter-spacing: 2px;
    text-transform: uppercase;
}

.btn-hero {
    display: inline-flex;
    align-items: center;
    gap: 15px;
    padding: 18px 40px;
    border: 1px solid var(--bronze);
    color: var(--text-white);
    text-decoration: none;
    text-transform: uppercase;
    font-family: 'Cinzel', serif;
    letter-spacing: 2px;
    font-weight: 700;
    background: rgba(5, 10, 14, 0.6);
    backdrop-filter: blur(5px);
    transition: all 0.4s ease;
}

.btn-hero:hover {
    background: var(--bronze);
    color: var(--deep-sea);
    box-shadow: 0 0 30px rgba(197, 160, 89, 0.4);
    transform: translateY(-2px);
}

.scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    z-index: 3;
    opacity: 0.7;
}

.scroll-text {
    font-size: 11px;
    letter-spacing: 3px;
    color: var(--text-gray);
}

.scroll-line {
    width: 1px;
    height: 50px;
    background: linear-gradient(to bottom, var(--teal-glow), transparent);
    animation: scrollDown 2s ease-in-out infinite;
}

@keyframes scrollDown {

    0%,
    100% {
        transform: translateY(0);
        opacity: 0;
    }

    50% {
        transform: translateY(20px);
        opacity: 1;
    }
}

/* SECTIONS */
.about,
.path,
.vacancies,
.reviews,
.contacts {
    padding: 120px 0;
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
}

.header-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
}

.deco-line {
    height: 1px;
    width: 60px;
    background: linear-gradient(90deg, transparent, var(--teal-glow), transparent);
}

.deco-icon {
    font-size: 24px;
    color: var(--teal-glow);
}

.section-title {
    font-family: 'Teko', sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    text-transform: uppercase;
    color: var(--text-white);
    margin-bottom: 20px;
}

.section-subtitle {
    font-size: 16px;
    color: var(--text-gray);
    max-width: 700px;
    margin: 0 auto;
}

/* BENTO GRID */
.bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
}

.bento-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 32px;
    transition: all 0.4s ease;
    position: relative;
}

.bento-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--teal-glow);
    transform: translateY(-5px);
    box-shadow: 0 20px 50px rgba(3, 92, 107, 0.3);
}

.bento-card.large {
    grid-column: span 2;
    grid-row: span 2;
}

.bento-card.medium {
    grid-column: span 2;
}

.bento-card.small {
    grid-column: span 1;
}

.card-label {
    font-size: 11px;
    color: var(--teal-glow);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 16px;
    font-weight: 600;
}

.bento-card h3 {
    font-family: 'Cinzel', serif;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--text-white);
}

.bento-card p {
    color: var(--text-gray);
    line-height: 1.8;
    margin-bottom: 16px;
}

.photo-card {
    padding: 0;
    overflow: hidden;
    cursor: pointer;
}

.photo-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(60%) contrast(1.2);
    transition: 0.5s;
}

.photo-card:hover img {
    filter: grayscale(0%);
    transform: scale(1.05);
}

.photo-overlay {
    position: absolute;
    inset: 0;
    background: rgba(3, 92, 107, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.photo-card:hover .photo-overlay {
    opacity: 1;
}

.stat-card {
    background: linear-gradient(135deg, rgba(3, 92, 107, 0.1), rgba(197, 160, 89, 0.05));
    border-color: var(--teal-glow);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.big-stat {
    font-family: 'Teko', sans-serif;
    font-size: 48px;
    font-weight: 900;
    color: var(--teal-glow);
    line-height: 1;
    margin-bottom: 12px;
}

.stat-card p {
    color: var(--text-gray);
    font-size: 14px;
    margin: 0;
}

.timeline {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.timeline-item {
    display: flex;
    gap: 16px;
    position: relative;
    padding-left: 40px;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 5px;
    width: 14px;
    height: 14px;
    background: #080c10;
    border: 2px solid #555;
    border-radius: 50%;
    transition: 0.3s;
}

.timeline-item:hover::before,
.timeline-item.active::before {
    background: var(--teal-glow);
    border-color: var(--teal-glow);
    box-shadow: 0 0 10px var(--teal-glow);
}

.tl-year {
    font-family: 'Teko', sans-serif;
    font-size: 20px;
    color: var(--bronze);
    min-width: 60px;
    font-weight: 700;
}

.tl-content h4 {
    font-size: 14px;
    font-weight: 700;
    color: var(--text-white);
    margin: 0 0 5px 0;
    text-transform: uppercase;
}

.tl-content p {
    font-size: 13px;
    color: #888;
    margin: 0;
}

.quote-card {
    background: rgba(197, 160, 89, 0.05);
    border-left: 4px solid var(--bronze);
    position: relative;
    grid-column: span 2;
}

.quote-mark {
    position: absolute;
    top: 24px;
    left: 24px;
    font-family: serif;
    font-size: 120px;
    color: rgba(197, 160, 89, 0.1);
    line-height: 1;
}

.quote-text {
    position: relative;
    z-index: 1;
    font-size: 20px;
    font-style: italic;
    color: var(--text-white);
    line-height: 1.6;
    margin: 0;
}

/* PATH */
.path {
    background: #0b0f12;
    position: relative;
}

.tactical-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
        linear-gradient(rgba(3, 92, 107, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(3, 92, 107, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
    z-index: 0;
}

.path-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
    position: relative;
    z-index: 1;
}

.path-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 40px;
    transition: all 0.4s ease;
    position: relative;
}

.path-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--teal-glow);
    transform: translateY(-10px);
    box-shadow: 0 20px 50px rgba(3, 92, 107, 0.3);
}

.path-card.featured {
    border: 2px solid var(--teal-glow);
    box-shadow: 0 0 20px rgba(3, 92, 107, 0.2);
}

.featured-badge {
    position: absolute;
    top: -15px;
    left: 30px;
    background: var(--teal-glow);
    color: white;
    padding: 8px 20px;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    clip-path: polygon(10px 0, 100% 0, 100% 100%, 0 100%, 0 10px);
}

.path-icon {
    font-size: 60px;
    color: var(--teal-glow);
    margin-bottom: 20px;
    transition: 0.3s;
}

.path-card:hover .path-icon {
    transform: scale(1.1);
    color: var(--bronze);
}

.path-card h3 {
    font-family: 'Teko', sans-serif;
    font-size: 32px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 10px;
}

.path-desc {
    font-size: 13px;
    color: var(--text-gray);
    margin-bottom: 30px;
    font-style: italic;
}

.path-features {
    list-style: none;
    margin-bottom: 30px;
}

.path-features li {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 15px;
    font-size: 14px;
    color: var(--text-gray);
}

.check {
    font-size: 18px;
    color: var(--teal-glow);
    flex-shrink: 0;
    margin-top: 2px;
}

.btn-path {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 25px;
    background: transparent;
    color: var(--teal-glow);
    border: 1px solid var(--teal-glow);
    text-decoration: none;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1px;
    transition: 0.3s;
}

.btn-path:hover {
    background: var(--teal-glow);
    color: white;
    box-shadow: 0 0 20px var(--teal-glow);
}

.btn-path.featured {
    background: var(--teal-glow);
    color: white;
}

.btn-path.featured:hover {
    background: var(--bronze);
    border-color: var(--bronze);
    box-shadow: 0 0 20px var(--bronze);
}

/* VACANCIES */
.vacancy-filters {
    display: flex;
    gap: 15px;
    margin-bottom: 40px;
    flex-wrap: wrap;
    justify-content: center;
}

.filter-btn {
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-gray);
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    transition: 0.3s;
}

.filter-btn:hover,
.filter-btn.active {
    background: var(--teal-glow);
    border-color: var(--teal-glow);
    color: white;
}

.vacancy-list {
    max-width: 1000px;
    margin: 0 auto;
}

.vacancy-item {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 16px;
    transition: all 0.3s ease;
}

.vacancy-item.priority {
    border-color: rgba(197, 160, 89, 0.3);
}

.vacancy-header {
    padding: 24px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    transition: 0.3s;
}

.vacancy-header:hover {
    background: rgba(255, 255, 255, 0.02);
    padding-left: 30px;
}

.vacancy-item.active .vacancy-header {
    background: rgba(3, 92, 107, 0.1);
    padding-left: 30px;
}

.vacancy-title {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
    flex: 1;
}

.vacancy-title h3 {
    font-family: 'Teko', sans-serif;
    font-size: 32px;
    margin: 0;
    text-transform: uppercase;
}

.vacancy-count {
    font-size: 13px;
    color: var(--text-gray);
}

.priority-badge {
    padding: 4px 12px;
    background: rgba(197, 160, 89, 0.1);
    border: 1px solid rgba(197, 160, 89, 0.3);
    color: var(--bronze);
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
}

.vacancy-meta {
    display: flex;
    align-items: center;
    gap: 16px;
}

.vacancy-salary {
    font-weight: 600;
    color: var(--bronze);
    background: rgba(197, 160, 89, 0.1);
    padding: 5px 10px;
    border: 1px solid rgba(197, 160, 89, 0.3);
}

.vacancy-toggle {
    font-size: 24px;
    color: #555;
    transition: 0.3s;
}

.vacancy-item.active .vacancy-toggle {
    transform: rotate(180deg);
    color: var(--text-white);
}

.vacancy-body {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease;
}

.vacancy-item.active .vacancy-body {
    max-height: 600px;
}

.vacancy-body>* {
    padding: 0 24px 24px 54px;
}

.vacancy-body p {
    color: #ccc;
    line-height: 1.6;
    margin-bottom: 20px;
}

.vacancy-tags {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
}

.vacancy-tags span {
    font-size: 10px;
    text-transform: uppercase;
    color: #888;
    border: 1px solid #444;
    padding: 5px 10px;
    letter-spacing: 1px;
}

.btn-apply {
    display: inline-block;
    font-family: 'Teko', sans-serif;
    font-size: 20px;
    padding: 10px 30px;
    background: var(--teal-glow);
    color: var(--deep-sea);
    text-decoration: none;
    text-transform: uppercase;
    transition: 0.3s;
}

.btn-apply:hover {
    background: var(--bronze);
    box-shadow: 0 0 15px var(--bronze);
}

/* REVIEWS */
.reviews {
    background: #0b0f12;
}

.reviews-carousel {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
}

.reviews-track {
    display: flex;
    transition: transform 0.4s ease;
}

.review-card {
    min-width: 100%;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 40px;
}

.review-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
    gap: 20px;
}

.review-author {
    display: flex;
    gap: 16px;
    align-items: center;
}

.review-avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--teal-glow), var(--bronze));
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Teko', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: white;
}

.review-author h4 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 4px;
}

.review-author p {
    font-size: 14px;
    color: var(--text-gray);
    margin: 0;
}

.review-rating {
    color: var(--bronze);
    font-size: 18px;
    display: flex;
    gap: 4px;
}

.review-text {
    font-size: 16px;
    line-height: 1.8;
    color: var(--text-gray);
    margin-bottom: 20px;
}

.review-date {
    font-size: 13px;
    color: var(--teal-glow);
}

.carousel-controls {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    margin-top: 40px;
}

.carousel-btn {
    width: 50px;
    height: 50px;
    border: 1px solid var(--teal-glow);
    background: transparent;
    color: var(--teal-glow);
    font-size: 24px;
    cursor: pointer;
    transition: 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.carousel-btn:hover {
    background: var(--teal-glow);
    color: white;
}

.carousel-dots {
    display: flex;
    gap: 10px;
}

.carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: 0.3s;
}

.carousel-dot.active {
    background: var(--teal-glow);
    transform: scale(1.2);
}

/* CONTACTS */
.contacts-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 48px;
}

.contact-form {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 40px;
}

.contact-form h3 {
    font-family: 'Teko', sans-serif;
    font-size: 32px;
    margin-bottom: 32px;
    text-transform: uppercase;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
}

.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 14px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-white);
    font-family: 'Montserrat', sans-serif;
    transition: 0.3s;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--teal-glow);
}

.btn-submit {
    width: 100%;
    padding: 18px;
    background: var(--teal-glow);
    color: white;
    border: none;
    font-family: 'Teko', sans-serif;
    font-size: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    cursor: pointer;
    transition: 0.3s;
}

.btn-submit:hover {
    background: var(--bronze);
    box-shadow: 0 0 20px var(--bronze);
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.contact-block {
    background: rgba(255, 255, 255, 0.02);
    border-left: 3px solid var(--teal-glow);
    padding: 20px;
    display: flex;
    gap: 16px;
}

.contact-icon {
    font-size: 24px;
    color: var(--teal-glow);
}

.contact-block h4 {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
}

.contact-block a {
    color: var(--teal-glow);
    text-decoration: none;
    font-size: 16px;
    font-weight: 600;
    transition: 0.3s;
}

.contact-block a:hover {
    color: var(--bronze);
}

.contact-block p {
    font-size: 14px;
    color: var(--text-gray);
    margin: 4px 0 0 0;
}

.location-note {
    font-size: 12px;
    color: var(--text-gray);
}

.social-links {
    display: flex;
    gap: 12px;
}

.social-links a {
    width: 48px;
    height: 48px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: var(--text-white);
    transition: 0.3s;
}

.social-links a:hover {
    background: var(--teal-glow);
    border-color: var(--teal-glow);
    transform: translateY(-5px);
}

/* FOOTER */
.footer {
    background: #030608;
    padding: 60px 0 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
}

.footer-brand {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
}

.footer-brand img {
    height: 50px;
}

.footer-brand h3 {
    font-family: 'Teko', sans-serif;
    font-size: 24px;
    margin: 0;
}

.footer-brand p {
    font-size: 10px;
    color: var(--bronze);
    letter-spacing: 2px;
    margin: 5px 0 0 0;
}

.footer-desc {
    font-size: 14px;
    color: var(--text-gray);
    line-height: 1.8;
}

.footer-col h4 {
    font-family: 'Teko', sans-serif;
    font-size: 20px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 20px;
}

.footer-col a {
    display: block;
    color: var(--text-gray);
    text-decoration: none;
    margin-bottom: 12px;
    font-size: 14px;
    transition: 0.3s;
}

.footer-col a:hover {
    color: var(--teal-glow);
    padding-left: 5px;
}

.footer-col p {
    color: var(--text-gray);
    font-size: 14px;
    line-height: 1.8;
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-bottom p {
    font-size: 12px;
    color: var(--text-gray);
}

.footer-socials {
    display: flex;
    gap: 15px;
}

.footer-socials a {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: var(--text-white);
    transition: 0.3s;
}

.footer-socials a:hover {
    background: var(--teal-glow);
    border-color: var(--teal-glow);
}

/* RESPONSIVE */
@media (max-width: 1200px) {
    .bento-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .bento-card.large {
        grid-column: span 2;
        grid-row: span 1;
    }

    .bento-card.medium {
        grid-column: span 1;
    }
}

@media (max-width: 992px) {

    .nav-menu,
    .btn-cta {
        display: none;
    }

    .mobile-toggle {
        display: flex;
    }

    .hero-stats {
        gap: 32px;
    }

    .stat-number {
        font-size: 36px;
    }

    .path-grid {
        grid-template-columns: 1fr;
    }

    .contacts-grid {
        grid-template-columns: 1fr;
    }

    .footer-bottom {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 0 20px;
    }

    .nav-container {
        padding: 20px;
    }

    .hero {
        padding: 120px 20px 80px;
    }

    .hero-subtitle {
        text-align: center;
        border: none;
        padding: 0;
    }

    .hero-stats {
        flex-direction: column;
        gap: 24px;
    }

    .bento-grid {
        grid-template-columns: 1fr;
    }

    .bento-card.large,
    .bento-card.medium,
    .bento-card.small {
        grid-column: span 1;
    }

    .vacancy-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .vacancy-title {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }

    .vacancy-title h3 {
        font-size: 24px;
    }

    .vacancy-meta {
        width: 100%;
        justify-content: space-between;
    }

    .vacancy-body>* {
        padding-left: 24px;
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .review-header {
        flex-direction: column;
    }

    .carousel-controls {
        gap: 16px;
    }

    .vacancy-filters {
        flex-direction: column;
    }

    .filter-btn {
        width: 100%;
        text-align: center;
    }
}